<nodeTypes xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0"
           xmlns:jcr="http://www.jcp.org/jcr/1.0">

  <nodeType name="todo:todo" isMixin="false" hasOrderableChildNodes="false">
    <supertypes>
      <supertype>nt:base</supertype>
      <supertype>mix:referenceable</supertype>
    </supertypes>
    <propertyDefinitions>
      <propertyDefinition name="todo:priority" requiredType="int" autoCreated="true" mandatory="false"
                          onParentVersion="COPY" protected="false" multiple="false">
        <valueConstraints/>
      </propertyDefinition>
      <propertyDefinition name="todo:isCompleted" requiredType="Boolean" autoCreated="true" mandatory="false"
                          onParentVersion="COPY" protected="false" multiple="false">
        <valueConstraints/>
      </propertyDefinition>
      <propertyDefinition name="todo:job" requiredType="String" autoCreated="true" mandatory="false"
                          onParentVersion="COPY" protected="false" multiple="false">
        <valueConstraints/>
      </propertyDefinition>
    </propertyDefinitions>
    <childNodeDefinitions/>
  </nodeType>

  <nodeType name="todo:todolist" isMixin="false" hasOrderableChildNodes="true">
    <supertypes>
      <supertype>nt:base</supertype>
      <supertype>mix:referenceable</supertype>
    </supertypes>
    <propertyDefinitions>
      <propertyDefinition name="todo:maxChildId" requiredType="int" autoCreated="true" mandatory="false"
                          onParentVersion="COPY" protected="false" multiple="false">
        <valueConstraints/>
      </propertyDefinition>
    </propertyDefinitions>
    <childNodeDefinitions>
      <childNodeDefinition name="*" defaultPrimaryType="todo:todo" autoCreated="false" mandatory="false"
                           onParentVersion="COPY" protected="false" sameNameSiblings="true">
        <requiredPrimaryTypes>
          <requiredPrimaryType>todo:todo</requiredPrimaryType>
        </requiredPrimaryTypes>
      </childNodeDefinition>
    </childNodeDefinitions>
  </nodeType>

</nodeTypes>